/* pages/profile/profile.wxss */
page{
  background: rgb(236, 236, 236);
}
.myselft{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 300rpx;
  background: #fff;
 
}
.myselft image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.divSilde{
  width: 100%;
  height: 20rpx;
  background: rgba(221,221,221,.8);
}
.order{
  font-size: 12px;
  border-bottom: 1rpx solid #ddd;  
  background: #fff;
}
.order-heade{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
}
.all-order{
  color: #999;
}
.arrow{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.arrow:after{
  content:'';
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #333;
  border-right: 3rpx solid #333;
  transform: rotate(45deg);
}
.order-promise{
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0rpx;
  background: #fff;
}
.order-item{
  display: flex;
  font-size: 12px;
  color: #333;
  flex-direction: column;
  align-items: center;
}
.order-item image{
  width: 40rpx;
  height: 40rpx;
}
.address{
position: relative;
  display: flex;
  font-size: 12px;
  color: #333;
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 40rpx;
  background: #fff;
}
.address image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.address .address-arrow{
  position: absolute;
  right: 30rpx;
  top: 35rpx;
}
.address-bottom{
  border-bottom: none;
}
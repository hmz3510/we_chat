/* pages/cart/cart.wxss */
page{
   background: rgb(236, 236, 236);
}
.cart-info{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
 
}
.cart{
  display: flex;
  align-items: center;
}
.cart-info image{
  width: 150rpx;
  height: 150rpx;
}
.cart-info text{
  font-size: 14px;
  color: #333;
}
.check{
  margin-left: 20rpx;
}
.cart-item{
  background: #fff;
  margin: 20rpx 20rpx;
  border-radius: 20rpx;
}
.item-img{
  width: 40rpx;
  height:40rpx;
  vertical-align: middle;
  padding-left: 30rpx;
}

.cart-right{
  display: flex;
  width: 100%;
  padding: 30rpx;
 
}
.cart-right image{
  width: 30%;
  height: 200rpx;
}
.details{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  margin-left: 20rpx;
}
.details .limit{
  margin-top: 30rpx;
}
.details .price{
  margin-top: 30rpx;
  color: red;
}
.buy{
  display: flex;
  justify-content: center;
  margin-top: 160rpx;
  
}
.buy input{
 background: rgb(231, 231, 231);
  width: 45rpx;
  height: 45rpx;
  font-size: 12px;
  text-align: center;
  border: none;
  border-radius: 0rpx;
}
.buy button{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 15rpx;
}
.cart-shop{
  position: fixed;
  background: #fff;
  bottom: 0rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 14px;
  z-index: 100;
  padding-left: 10rpx;
}
.cart-shop checkbox{
  background: #fff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.select-all{
   width: 20%
}
.total{
  width: 20%;
  margin-left: -50rpx;
}
.total-price{
  color: #f20;
  width: 20%;
  margin-left: -50rpx;
}
.edit{
  /* margin-left: 170rpx; */
  background: lightblue;
  color: #fff;
  height: 80rpx;
  border-radius: 0;
  width: 19%;
  font-size: 12px;
   line-height: 80rpx;
   margin-left: 100rpx;
}
.count{
  background: #f20;
  color: #fff;
  width: 19%;
  margin-right: 0rpx;
  border-radius: 0;
  height: 80rpx;
  font-size: 12px;
  line-height: 80rpx;
}
.silde::after{
  display: block;
  content: '';
  margin-top: 60rpx;
  height: 20rpx;
}
.cart-shop-img{
  width: 40rpx;
  height: 38rpx;
  padding-left: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
/* pages/details/details.wxss */
.details{
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
}
.details-image,image{
  width: 100%;
  height: 580rpx;
}
.details-desc{
  font-size: 16px;
  margin: 20rpx 20rpx;
}
.details-price{
  color: red;
  font-size: 14px;
  font-weight: bold;
  margin: 40rpx 20rpx;
}
.details-price .price-old{
  color: #333;
  font-weight: normal;
  margin-left: 80rpx;
  font-size: 13px;
  text-decoration: line-through;
}
.details-price .sold{
  color: #333;
  font-weight: normal;
  margin-left: 60rpx;
  font-size: 13px;
}
.promise{
  display: flex;
  width: 100%;
  margin: 30rpx 30rpx;
}
.promise-item{
  width: 25%;
  font-size: 12px;
  color: #333;
}
.promise-item image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.divSilde{
  width: 100%;
  height: 20rpx;
  background: rgba(221,221,221,.8);
}
.product_detail{
  width: 100%;
}
.head{
  margin: 10rpx 0rpx;
  padding:20rpx 0rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  font-size: 14px;
  color: #333;
  border-bottom: 1rpx solid #ddd;
}
.head .title{
  color: red;
}
.bottom{
   margin-top: 40rpx;
}
.bottom-item{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}
.bottom-item image{
  width: 100%;
  height: 520rpx;
}
.shop-cart{
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  border: 1rpx solid #ddd;
  z-index: 100;
  height: 80rpx;
}
.shop-home,.shop-shou{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 16rpx;
  color: #333;
  margin-left: 50rpx;
  border-right: 1rpx solid #ccc;
  padding-right: 40rpx;
}
.shop-shou text{
  width: 50rpx;
  margin-left: 10rpx;
}
.shop-home image{
  width: 40rpx;
  height: 40rpx;
}
.shop-shou image{
  width: 40rpx;
  height: 40rpx;
  }
  .buy{
    display: flex;
    font-size: 14px;
  }
  .addCart{
    background: rgb(240, 114, 5);
    color: #fff;
    border:none;
    height: 85rpx;
    border-radius: 0;
    font-size: 14px;
    line-height: 85rpx;
    margin-top: -2rpx;
    width: 250rpx;
  
  }
  .buy-right{
    background:#f20;
    color: #fff;
    border:none;
    height: 85rpx;
    border-radius: 0;
    font-size: 14px;
    line-height: 85rpx;
    margin-top: -2rpx;
    width: 250rpx;
    overflow: hidden;
  }